<%= form_for @person do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </p>

  <p>
    <%= f.label :hair_color %>
    <%= f.text_field :hair_color %>
  </p>

  <p>
    <%= f.label :eye_color %>
    <%= f.text_field :eye_color %>
  </p>

  <p>
    <%= f.label :gender %>
    <%= f.text_field :gender %>
  </p>

  <p>
    <%= f.label :alive, 'Is this person alive?' %>
    <%= f.check_box :alive %>
  </p>

  <%= f.submit 'Submit' %>
  <br /><br />

<% end %>

<%= link_to "Return to All People", root_path, class: 'name-link' %>
